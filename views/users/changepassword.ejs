<%- include('../partials/header')%>
<title><%= currentPage %></title>
    <div class="container">
        <%- include('../partials/alert')%>
        <h1 class="h2 mb-0 text-gray-800">Change Password</h1>
        <br>
        <div class="card">
            <div class="card-header">
                <div class="header">
                    <div class="text-xl font-weight-bold text-primary text-pascalcase case mb-1">
                        Change Your Password</div>
                </div>
            </div>
            <div class="card-body">

                <form action="" method="post">

                    <div class="row mb-3">
                        <label for="oldpassword" class="col-sm-2 col-form-label">Old Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="oldpassword" name="oldpassword" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="newpassword" class="col-sm-2 col-form-label">New Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="newpassword" name="newpassword" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="retypepassword" class="col-sm-2 col-form-label">Retype Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="retypepassword" name="retypepassword" required>
                        </div>
                    </div>

                </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-solid fa-database"></i>
                            </span>
                            <span class="text">Update</span>
                        </button> 
                    </div>
                </form>

        </div>
    </div>
    <%- include('../partials/footer')%>