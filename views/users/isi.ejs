<%- include('../partials/header')%>
    <title><%= currentPage %></title>

    <div class="container">
        <h1 class="h2 mb-0 text-gray-800">Users</h1>
        <h1 class="h5 mb-0 text-gray-800">This is data of Users</h1>
        <br>
       
        <div class="card">

            <div class="card-header">
                <div class="header">
                    <a href="/users/add" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-solid fa-plus"></i>
                        </span>
                        <span class="text">Add</span>
                    </a>
                </div>
            </div>

            <div class="card-body">
                <table id="table-user" class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>User ID</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#table-user').DataTable({
                "lengthMenu": [[3, 10, 100], [3, 10, 100]],
                "processing": true,
                "serverSide": true,
                "ajax": "/users/datatable",
                "columns": [
                    { "data": "userid" },
                    { "data": "email" },
                    { "data": "name" },
                    { "data": "role" },
                    {
                        "data": "userid",
                        render: function (data, type) {
                            return `
                            <a href="/users/edit/${data}" class="btn btn-circle btn-success"> <i class="fas fa-info-circle "></i></a>
                            <a href="#" class="btn btn-circle btn-danger" data-toggle="modal" data-target="#deleteModal${data}"> <i class=" fas fa-solid fa-trash"></i></a>

                            <div class="modal fade" id="deleteModal${data}" tabindex="-1" role="dialog"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Deleted Confirmation</h5>
                                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">Ã—</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">Are you sure, you want delete it</div>
                                                        <div class="modal-footer">
                                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
                                                            <a class="btn btn-primary" href="/users/delete/${data}">Yes</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            `
                        }
                    }

                ]
            });
        });
    </script>


    <%- include('../partials/footer')%>